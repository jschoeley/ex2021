@Article{TriasLlimos2020,
  author       = {Trias-Llim\'{o}s, Sergi and Riffe, Tim and Bilal, Usama},
  journal      = {PLOS ONE},
  title        = {Monitoring Life Expectancy Levels during the {{COVID}}-19 Pandemic: {{Example}} of the Unequal Impact of the First Wave on {{Spanish}} Regions},
  year         = {2020},
  issn         = {1932-6203},
  month        = {nov},
  number       = {11},
  pages        = {e0241952},
  volume       = {15},
  abstract     = {Background To provide an interpretable summary of the impact on mortality of the COVID-19 pandemic we estimate weekly and annual life expectancies at birth in Spain and its regions. Methods We used daily death count data from the Spanish Daily Mortality Monitoring System (MoMo), and death counts from 2018, and population on July 1st, 2019 by region (CCAA), age groups, and sex from the Spanish National Statistics Institute. We estimated weekly and annual (2019 and 2020*, the shifted annual calendar period up to 5 July 2020) life expectancies at birth as well as their differences with respect to 2019. Results Weekly life expectancies at birth in Spain were lower in weeks 11–20, 2020 compared to the same weeks in 2019. This drop in weekly life expectancy was especially strong in weeks 13 and 14 (March 23rd to April 5th), with national declines ranging between 6.1 and 7.6 years and maximum regional weekly declines of up to 15 years in Madrid. Annual life expectancy differences between 2019 and 2020 also reflected an overall drop in annual life expectancy of 0.9 years for both men and women. These drops ranged between 0 years in several regions (e.g. Canary and Balearic Islands) to 2.8 years among men in Madrid. Conclusions Life expectancy is an easy to interpret measure for understanding the heterogeneity of mortality patterns across Spanish regions. Weekly and annual life expectancy are sensitive and useful indicators for understanding disparities and communicating the gravity of the situation because differences are expressed in intuitive year units.},
  doi          = {10.1371/journal.pone.0241952},
  editor       = {Kannan Navaneetham},
  file         = {:TriasLlimos2020 - Monitoring Life Expectancy Levels during the COVID 19 Pandemic_ Example of the Unequal Impact of the First Wave on Spanish Regions.pdf:PDF},
  groups       = {2021-01-ex2020, 2021-11-ex2021},
  keywords     = {Age groups, COVID 19, Death rates, England, Life expectancy, Pandemics, Spain, Sweden},
  langid       = {english},
  publisher    = {{Public Library of Science}},
  shortjournal = {PLOS ONE},
  shorttitle   = {Monitoring Life Expectancy Levels during the {{COVID}}-19 Pandemic},
  urldate      = {2020-11-23},
}

